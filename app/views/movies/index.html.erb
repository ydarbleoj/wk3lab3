<div class="container">
	<header>
	<h1>Rails Movie App</h1>
	
	<div class='information'>
		<form class='form-inline global-search' role='form' action="/results" method="get">
		    <input class='searchbox' id="movie" name="movie" type="text" placeholder="Enter Title Here" />
		 	<div class="button">
			    <button type="submit" id="s" class="btn btn-custom btn-lg btn-block"><span class="glyphicon glyphicon-search"></span>
			</div>   	
		</form>
	</div>


	<% @movies.each do |movie| %>

	  <!-- <a href="/movies/<%#= movie['imdbID'] %>"><%#= movie["Title"] %></a> - <%#= movie["Year"] %></br> -->

	  <%= link_to movie["title"], movie_path(movie['imdbID']) %> - <%= movie["year"] %></br>

	  <%= button_to "delete", {controller: :movies, action: :destroy, id: movie["imdbID"] }, :method => :delete %>
	  <%= button_to "edit", {controller: :movies, action: :edit, id: movie["imdbID"] }, :method => :get %>

	  <br>

	<% end %>
	<br>
	<%= link_to 'Add Movie to DB', new_movie_path %>
	</header>
</div>